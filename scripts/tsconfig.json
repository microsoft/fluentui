{
  // This config is used for running build scripts through ts-node
  "extends": "./tsconfig.scripts.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "outDir": "../../dist",
    "resolveJsonModule": true,
    "types": ["node", "jest"]
  },
  "include": ["."],
  "exclude": ["node_modules", "./cypress/**", "./storybook/**", "./monorepo/**", "./beachball/**"]
}
