{
  "extends": "./typescript/tsconfig.common.json",
  // This config is used for running build scripts through ts-node
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2019",
    "lib": ["es2019", "DOM"], // Node 10, occasional test-related stuff that uses DOM
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "typeRoots": ["../typings", "../node_modules/@types"],
    "types": ["node", "webpack-env"]
  },
  "include": ["."],
  "exclude": ["./create-package/plop-templates*"]
}
