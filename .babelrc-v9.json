{
  "presets": [
    [
      "@griffel",
      {
        "babelOptions": {
          "plugins": [
            [
              "babel-plugin-module-resolver",
              {
                "root": ["../../../"],
                "alias": {
                  "@fluentui/tokens": "packages/tokens/lib/index.js",
                  "^@fluentui/(?!react-icons)(.+)": "packages/react-components/\\1/lib/index.js"
                }
              }
            ]
          ]
        }
      }
    ]
  ]
}
