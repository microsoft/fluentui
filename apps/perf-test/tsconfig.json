{
  "compilerOptions": {
    "target": "es2019",
    "outDir": "lib",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "lib": ["es2019", "dom"],
    "types": ["webpack-env"],
    "skipLibCheck": true
  },
  "include": ["src"]
}
