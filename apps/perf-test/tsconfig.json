{
  "compilerOptions": {
    "target": "es5",
    "outDir": "lib",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "strict": true,
    "lib": ["es6", "dom"],
    "types": ["webpack-env", "webpack-node-externals"],
    "skipLibCheck": true
  },
  "include": ["src"]
}
