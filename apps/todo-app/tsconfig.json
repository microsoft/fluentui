{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "lib",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "typeRoots": ["../../node_modules/@types", "../../typings"],
    "types": ["custom-global"]
  },
  "include": ["src"]
}
