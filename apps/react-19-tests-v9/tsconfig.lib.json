{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["ES2019", "ES2020.Intl", "dom"],
    "sourceMap": true,
    "strict": true,
    "pretty": true,
    "noEmit": true,
    "isolatedModules": true,
