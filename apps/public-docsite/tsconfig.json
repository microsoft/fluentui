{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    //ensure webpack can do async imports
    "module": "esnext",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "lib": ["es5", "dom", "ES2015.Promise"],
    "typeRoots": ["../../node_modules/@types", "../../typings"],
    "types": ["webpack-env", "custom-global"]
  },
  "include": ["src"]
}
