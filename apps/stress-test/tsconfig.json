{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": false,
    "allowJs": true,
    "checkJs": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "react",
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "types": ["environment"],
    "outDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/fixtures"]
}
