{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "lib": ["ES2019", "dom"],
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "inlineSources": true,
    "types": []
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.cy.tsx",
    "**/*.cy.ts",
    "src/issues/"
  ],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
