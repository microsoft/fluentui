{
  "extends": "../../tsconfig.base.json",
  "include": ["src"],
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": ["ES2017", "DOM"],
    "outDir": "dist",
    "jsx": "react",
    "declaration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "types": ["jest", "custom-global", "inline-style-expand-shorthand", "node"],
    "isolatedModules": true
  }
}
