{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declarationDir": "dist/dts",
    "outDir": "dist/esm",
    "strictNullChecks": true,
    "target": "es2015",
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "types": ["node", "mocha", "webpack-env"],
    "lib": ["DOM", "ES2015", "ES2016.Array.Include"]
  },
  "include": ["src"]
}
