{
  "extends": "../../tsconfig.base.json",
  "include": ["src"],
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "lib": ["ES2019", "dom"],
    "outDir": "dist",
    "jsx": "react",
    "declaration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "isolatedModules": true,
    "types": [
      "jest",
      "custom-global",
      "inline-style-expand-shorthand",
      "@testing-library/jest-dom",
      "storybook__addons"
    ]
  }
}
