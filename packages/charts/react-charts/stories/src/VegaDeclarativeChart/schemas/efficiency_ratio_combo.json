{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Production efficiency ratio",
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": { "field": "month", "type": "temporal", "axis": { "title": "Month", "format": "%b" } },
        "y": { "field": "actual", "type": "quantitative", "axis": { "title": "Production Units", "format": ",.0f" } },
        "color": { "value": "steelblue" }
      }
    },
    {
      "mark": { "type": "line", "point": true, "color": "orange" },
      "encoding": {
        "x": { "field": "month", "type": "temporal" },
        "y": { "field": "efficiency", "type": "quantitative", "axis": { "title": "Efficiency %" } }
      }
    }
  ],
  "data": {
    "values": [
      { "month": "2024-01", "actual": 28000, "efficiency": 87 },
      { "month": "2024-02", "actual": 32000, "efficiency": 90 },
      { "month": "2024-03", "actual": 30000, "efficiency": 88 },
      { "month": "2024-04", "actual": 35000, "efficiency": 92 },
      { "month": "2024-05", "actual": 33000, "efficiency": 89 },
      { "month": "2024-06", "actual": 38000, "efficiency": 94 }
    ]
  },
  "resolve": { "scale": { "y": "independent" } },
  "title": "Production vs Efficiency"
}
