{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Quarterly results in custom order (Q3, Q1, Q4, Q2)",
  "width": 500,
  "height": 350,
  "data": {
    "values": [
      { "quarter": "Q1", "profit": 125000 },
      { "quarter": "Q2", "profit": 148000 },
      { "quarter": "Q3", "profit": 167000 },
      { "quarter": "Q4", "profit": 189000 }
    ]
  },
  "mark": { "type": "bar", "color": "#00B7C3" },
  "encoding": {
    "x": {
      "field": "quarter",
      "type": "nominal",
      "sort": ["Q3", "Q1", "Q4", "Q2"],
      "axis": { "title": "Quarter (Custom Order)" }
    },
    "y": {
      "field": "profit",
      "type": "quantitative",
      "axis": {
        "title": "Profit",
        "format": "$,.0f"
      }
    }
  },
  "title": "Quarterly Profits (Custom Ordering)"
}
