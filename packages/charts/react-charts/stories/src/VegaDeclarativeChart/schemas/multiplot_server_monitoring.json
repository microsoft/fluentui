{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Server metrics monitoring: CPU, Memory, and Network",
  "data": {
    "values": [
      { "time": "00:00", "cpu": 45, "memory": 62, "network": 120 },
      { "time": "04:00", "cpu": 38, "memory": 58, "network": 95 },
      { "time": "08:00", "cpu": 72, "memory": 75, "network": 280 },
      { "time": "12:00", "cpu": 85, "memory": 82, "network": 340 },
      { "time": "16:00", "cpu": 78, "memory": 79, "network": 310 },
      { "time": "20:00", "cpu": 65, "memory": 71, "network": 245 },
      { "time": "23:59", "cpu": 52, "memory": 66, "network": 165 }
    ]
  },
  "vconcat": [
    {
      "title": "CPU Usage %",
      "mark": { "type": "area", "color": "#e74c3c", "opacity": 0.7 },
      "encoding": {
        "x": { "field": "time", "type": "ordinal", "axis": { "title": "Time of Day" } },
        "y": {
          "field": "cpu",
          "type": "quantitative",
          "axis": { "title": "CPU %", "format": ".0f" },
          "scale": { "domain": [0, 100] }
        }
      },
      "height": 120
    },
    {
      "title": "Memory Usage %",
      "mark": { "type": "area", "color": "#f39c12", "opacity": 0.7 },
      "encoding": {
        "x": { "field": "time", "type": "ordinal", "axis": { "title": "Time of Day" } },
        "y": {
          "field": "memory",
          "type": "quantitative",
          "axis": { "title": "Memory %", "format": ".0f" },
          "scale": { "domain": [0, 100] }
        }
      },
      "height": 120
    },
    {
      "title": "Network Traffic (MB/s)",
      "mark": { "type": "line", "point": true, "color": "#3498db" },
      "encoding": {
        "x": { "field": "time", "type": "ordinal", "axis": { "title": "Time of Day" } },
        "y": { "field": "network", "type": "quantitative", "axis": { "title": "Traffic (MB/s)", "format": ".0f" } }
      },
      "height": 120
    }
  ]
}
