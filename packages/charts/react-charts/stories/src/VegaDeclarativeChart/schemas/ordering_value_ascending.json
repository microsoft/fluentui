{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Customer satisfaction scores ordered by average rating (ascending)",
  "width": 500,
  "height": 350,
  "data": {
    "values": [
      { "service": "Technical Support", "rating": 4.2 },
      { "service": "Billing", "rating": 3.5 },
      { "service": "Product Quality", "rating": 4.7 },
      { "service": "Delivery Speed", "rating": 3.8 },
      { "service": "Customer Service", "rating": 4.5 },
      { "service": "Website Experience", "rating": 4.1 }
    ]
  },
  "mark": { "type": "bar", "color": "#8764B8" },
  "encoding": {
    "x": {
      "field": "service",
      "type": "nominal",
      "sort": { "field": "rating", "op": "mean", "order": "ascending" },
      "axis": { "title": "Service Category", "labelAngle": -30 }
    },
    "y": {
      "field": "rating",
      "type": "quantitative",
      "scale": { "domain": [0, 5] },
      "axis": {
        "title": "Average Rating",
        "format": ".1f"
      }
    }
  },
  "title": "Service Ratings (Lowest to Highest)"
}
