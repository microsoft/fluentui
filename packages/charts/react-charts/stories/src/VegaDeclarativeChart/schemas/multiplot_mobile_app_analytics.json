{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Mobile app analytics: Downloads, ratings, and revenue",
  "data": {
    "values": [
      { "month": "Jan", "downloads": 15200, "rating": 4.2, "revenue": 8400 },
      { "month": "Feb", "downloads": 18500, "rating": 4.3, "revenue": 10200 },
      { "month": "Mar", "downloads": 22100, "rating": 4.4, "revenue": 12800 },
      { "month": "Apr", "downloads": 28400, "rating": 4.5, "revenue": 16500 },
      { "month": "May", "downloads": 34200, "rating": 4.6, "revenue": 21200 },
      { "month": "Jun", "downloads": 41500, "rating": 4.7, "revenue": 27800 }
    ]
  },
  "vconcat": [
    {
      "title": "App Downloads Growth",
      "mark": { "type": "area", "color": "#3498db", "opacity": 0.6 },
      "encoding": {
        "x": { "field": "month", "type": "ordinal", "axis": { "title": "Month" } },
        "y": { "field": "downloads", "type": "quantitative", "axis": { "title": "Downloads", "format": ",.0f" } }
      },
      "height": 140
    },
    {
      "title": "User Ratings (1-5 stars)",
      "mark": { "type": "line", "point": { "filled": true, "size": 100 }, "color": "#f39c12", "strokeWidth": 3 },
      "encoding": {
        "x": { "field": "month", "type": "ordinal", "axis": { "title": "Month" } },
        "y": {
          "field": "rating",
          "type": "quantitative",
          "axis": { "title": "Rating", "format": ".1f" },
          "scale": { "domain": [4.0, 5.0] }
        }
      },
      "height": 140
    },
    {
      "title": "Monthly Revenue ($)",
      "mark": { "type": "bar", "color": "#2ecc71" },
      "encoding": {
        "x": { "field": "month", "type": "ordinal", "axis": { "title": "Month" } },
        "y": { "field": "revenue", "type": "quantitative", "axis": { "title": "Revenue ($)", "format": "$,.0f" } }
      },
      "height": 140
    }
  ]
}
