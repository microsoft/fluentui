{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Symptom severity tracking",
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": { "field": "date", "type": "temporal", "axis": { "title": "Date", "format": "%b %d" } },
        "y": { "field": "severity", "type": "quantitative", "axis": { "title": "Severity Score" } },
        "color": { "value": "coral" }
      }
    },
    {
      "mark": { "type": "line", "point": true, "color": "navy" },
      "encoding": {
        "x": { "field": "date", "type": "temporal" },
        "y": { "field": "medication", "type": "quantitative", "axis": { "title": "Medication Dose (mg)" } }
      }
    }
  ],
  "data": {
    "values": [
      { "date": "2024-11-01", "severity": 8, "medication": 50 },
      { "date": "2024-11-05", "severity": 7, "medication": 50 },
      { "date": "2024-11-09", "severity": 5, "medication": 75 },
      { "date": "2024-11-13", "severity": 4, "medication": 75 },
      { "date": "2024-11-17", "severity": 3, "medication": 100 },
      { "date": "2024-11-21", "severity": 2, "medication": 100 }
    ]
  },
  "resolve": { "scale": { "y": "independent" } },
  "title": "Symptom Severity vs Medication"
}
