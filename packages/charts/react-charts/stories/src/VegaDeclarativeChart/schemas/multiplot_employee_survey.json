{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Employee satisfaction survey results across departments",
  "data": {
    "values": [
      { "department": "Engineering", "satisfaction": 4.2, "engagement": 78, "retention": 92 },
      { "department": "Sales", "satisfaction": 3.8, "engagement": 72, "retention": 85 },
      { "department": "Marketing", "satisfaction": 4.0, "engagement": 75, "retention": 88 },
      { "department": "Support", "satisfaction": 3.6, "engagement": 68, "retention": 81 },
      { "department": "HR", "satisfaction": 4.1, "engagement": 76, "retention": 90 }
    ]
  },
  "hconcat": [
    {
      "title": "Satisfaction Score (1-5)",
      "mark": { "type": "bar", "color": "#27ae60" },
      "encoding": {
        "y": { "field": "department", "type": "nominal", "axis": { "title": "Department" }, "sort": "-x" },
        "x": {
          "field": "satisfaction",
          "type": "quantitative",
          "axis": { "title": "Score", "format": ".1f" },
          "scale": { "domain": [0, 5] }
        }
      },
      "width": 250,
      "height": 220
    },
    {
      "title": "Engagement %",
      "mark": { "type": "bar", "color": "#2980b9" },
      "encoding": {
        "y": { "field": "department", "type": "nominal", "axis": { "title": null }, "sort": "-x" },
        "x": {
          "field": "engagement",
          "type": "quantitative",
          "axis": { "title": "Engagement %", "format": ".0f" },
          "scale": { "domain": [0, 100] }
        }
      },
      "width": 250,
      "height": 220
    },
    {
      "title": "Retention Rate %",
      "mark": { "type": "bar", "color": "#8e44ad" },
      "encoding": {
        "y": { "field": "department", "type": "nominal", "axis": { "title": null }, "sort": "-x" },
        "x": {
          "field": "retention",
          "type": "quantitative",
          "axis": { "title": "Retention %", "format": ".0f" },
          "scale": { "domain": [0, 100] }
        }
      },
      "width": 250,
      "height": 220
    }
  ]
}
