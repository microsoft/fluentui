{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Investment ROI analysis",
  "data": {
    "values": [
      { "investment": "Real Estate A", "risk": 3, "roi": 12.5, "amount": 500000 },
      { "investment": "Tech Stock B", "risk": 7, "roi": 25.3, "amount": 200000 },
      { "investment": "Bond Fund C", "risk": 2, "roi": 4.8, "amount": 800000 },
      { "investment": "Crypto D", "risk": 9, "roi": 45.2, "amount": 100000 },
      { "investment": "Index Fund E", "risk": 4, "roi": 8.7, "amount": 600000 },
      { "investment": "Private Equity F", "risk": 6, "roi": 18.4, "amount": 400000 },
      { "investment": "Commodities G", "risk": 5, "roi": 6.9, "amount": 300000 }
    ]
  },
  "mark": "point",
  "encoding": {
    "x": {
      "field": "risk",
      "type": "quantitative",
      "axis": { "title": "Risk Level (1-10)" },
      "scale": { "domain": [0, 10] }
    },
    "y": { "field": "roi", "type": "quantitative", "axis": { "title": "ROI (%)", "format": ".1f" } },
    "size": {
      "field": "amount",
      "type": "quantitative",
      "legend": { "title": "Investment ($)" },
      "scale": { "range": [100, 1000] }
    },
    "color": {
      "field": "risk",
      "type": "quantitative",
      "scale": { "scheme": "redyellowgreen", "reverse": true },
      "legend": null
    },
    "tooltip": [
      { "field": "investment", "type": "nominal" },
      { "field": "roi", "type": "quantitative", "format": ".1f", "title": "ROI %" },
      { "field": "risk", "type": "quantitative", "title": "Risk" },
      { "field": "amount", "type": "quantitative", "format": "$,.0f", "title": "Amount" }
    ]
  },
  "title": "Investment Risk vs ROI Analysis"
}
