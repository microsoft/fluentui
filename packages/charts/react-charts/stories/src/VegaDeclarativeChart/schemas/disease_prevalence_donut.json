{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Disease prevalence breakdown",
  "data": {
    "values": [
      { "disease": "Hypertension", "cases": 1850 },
      { "disease": "Diabetes Type 2", "cases": 1340 },
      { "disease": "Asthma", "cases": 890 },
      { "disease": "Heart Disease", "cases": 675 },
      { "disease": "Arthritis", "cases": 1120 },
      { "disease": "COPD", "cases": 420 }
    ]
  },
  "mark": { "type": "arc", "innerRadius": 55, "outerRadius": 110 },
  "encoding": {
    "theta": { "field": "cases", "type": "quantitative" },
    "color": {
      "field": "disease",
      "type": "nominal",
      "scale": { "scheme": "set3" },
      "legend": { "title": "Condition" }
    },
    "tooltip": [
      { "field": "disease", "type": "nominal", "title": "Disease" },
      { "field": "cases", "type": "quantitative", "title": "Cases", "format": ",.0f" }
    ]
  },
  "title": "Disease Prevalence Distribution"
