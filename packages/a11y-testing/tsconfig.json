{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "lib": ["ES2019", "DOM"],
    "types": ["jest"],
    "isolatedModules": true
  },
  "include": ["src"]
}
