{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "outDir": "lib",
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "lib": ["es2017", "dom"],
    "types": ["jest"],
    "isolatedModules": true
  },
  "include": ["src"]
}
