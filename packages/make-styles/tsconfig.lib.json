{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "lib": ["ES2019", "dom"],
    "outDir": "dist",
    "declaration": true,
    "types": ["static-assets", "environment", "inline-style-expand-shorthand"]
  },
  "exclude": [
    "./src/common/**.ts",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx"
  ],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
