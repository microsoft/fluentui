{
  "compilerOptions": {
    "target": "es5",
    "outDir": "lib",
    "module": "commonjs",
    "lib": ["ES5", "ES2015.Collection", "ES2015.Iterable", "dom"],
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "isolatedModules": true,
    "types": ["jest"]
  },
  "include": ["src"]
}
