{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "module": "commonjs",
    "moduleResolution": "nodenext",
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"],
    "isolatedModules": true
  },
  "include": ["./src/**/*.js", "./src/**/*.ts"],
  "exclude": ["**/fixtures/**/*"]
}
