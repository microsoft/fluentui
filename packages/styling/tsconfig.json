{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "lib": ["es2017", "dom"],
    "types": ["jest", "webpack-env", "react"],
    "paths": {
      "@uifabric/styling": ["./src"]
    }
  },
  "include": ["src"]
}
