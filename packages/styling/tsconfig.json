{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": [
      "chai",
      "mocha",
      "webpack-env"
    ],
    "outDir": "./lib",
    "paths": {
      "office-ui-fabric-react/lib/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "lib-amd"
  ]
}