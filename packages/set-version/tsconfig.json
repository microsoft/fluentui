{
  "compilerOptions": {
    "target": "es2019",
    "outDir": "lib",
    "module": "commonjs",
    "lib": ["es2019", "dom"],
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
