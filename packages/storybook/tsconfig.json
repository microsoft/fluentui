{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "target": "es6",
    "module": "es6",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "lib": ["es6", "dom"],
    "types": [],
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
