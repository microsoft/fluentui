{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "lib": ["ES2019", "dom"],
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "inlineSources": true,
    "types": ["static-assets", "environment"]
  },
  "exclude": ["**/*.spec.ts", "**/*.spec.tsx", "**/*.test.ts", "**/*.test.tsx", "**/*.stories.ts", "**/*.stories.tsx"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
