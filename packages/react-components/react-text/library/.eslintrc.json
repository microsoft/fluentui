{
  "root": true,
  "overrides": [
    { "files": ["*.ts", "*.tsx", "*.js", "*.jsx"], "extends": ["plugin:@fluentui/eslint-plugin/react"] },
    {
      "files": ["*.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nx/dependency-checks": [
          "error",
          {
            "ignoredDependencies": [
              "@fluentui/react-jsx-runtime",
              "react-dom",
              "@types/react",
              "@types/react-dom",
              "@swc/helpers"
            ],
            "ignoredFiles": ["{projectRoot}/src/testing/**", "{projectRoot}/config/**"]
          }
        ]
      }
    }
  ]
}
