{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es2019",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "strict": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "lib": ["es5", "dom"],
    "types": ["webpack-env"]
  },
  "include": ["src"]
}
