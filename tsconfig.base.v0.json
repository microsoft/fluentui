{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2019", "dom"],
    "types": ["node", "jest"],
    "jsx": "react",
    "isolatedModules": true,
    "moduleResolution": "node",
    "pretty": true,
    "allowJs": false,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@fluentui/*": ["packages/fluentui/*/src"]
    }
  }
}
