{
  "$schema": "https://json-schema.org/schema",
  "version": 2,
  "title": "Build executor",
  "description": "",
  "type": "object",
  "properties": {
    "outputPathRoot": {
      "type": "string",
      "description": "The output path of the generated files."
    },
    "sourceRoot": {
      "type": "string",
      "description": "Directory where the source files are located"
    },
    "moduleOutput": {
      "type": "array",
      "description": "The output path of the generated module files.",
      "items": {
        "type": "object",
        "properties": {
          "module": { "type": "string", "description": "The module type" },
          "outputPath": { "type": "string", "description": "The output path of the generated files." }
        }
      }
    },
    "assets": {
      "type": "array",
      "description": "The assets to copy to the output folder.",
      "items": {
        "type": "object",
        "properties": {
          "glob": { "type": "string", "description": "The pattern to match." },
          "input": { "type": "string", "description": "The input path." },
          "output": { "type": "string", "description": "The output path." },
          "substitutions": {
            "type": "object",
            "description": "",
            "properties": {
              "key": { "type": "string", "description": "The key to replace." },
              "value": { "type": "string", "description": "The value to replace." }
            }
          }
        },
        "required": ["glob", "input", "output"]
      }
    },
    "clean": {
      "type": "boolean",
      "description": "Remove previous output before build",
      "default": true
    }
  },
  "required": ["sourceRoot", "outputPathRoot", "moduleOutput"]
}
