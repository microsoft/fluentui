{
  "extends": ["plugin:@fluentui/eslint-plugin/node"],
  "root": true,
  "ignorePatterns": ["!**/*", "**/__fixtures__/**"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "import/no-extraneous-dependencies": [
          "error",
          {
            "packageDir": [".", "../../"]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {}
    }
  ]
}
